<h1>Disaster Information</h1>
  <% @disasters.each do |disaster| %>
    <ul>
      <li><%=disaster.user.email%></li>
      <li><%=disaster.title%></li>
      <li><%=disaster.content%></li>
      <li><%=disaster.address%></li>
      <li><%= link_to 'Edit', edit_disaster_path(disaster) %></li>
      <li><%= link_to "Show", disaster_path(disaster) %></li>
      <%= form_for disaster, url: disaster_path(disaster), method: :delete do |f| %>
        <%= f.submit 'delete' %>
      <% end %>
    </ul>
  <% end %>

<%= link_to 'Create', new_disaster_path %>
<h3><%= link_to "LOGOUT", destroy_user_session_path, :method => :delete %></h3>