<%= form_for @disaster, url: disasters_path, method: :post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.collection_select :type_id, Type.order(:category),:id,:category, {:prompt => 'Type of Disaster'}, include_blank: true %>
  <%= f.submit %>
<% end %>
